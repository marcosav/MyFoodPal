<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/foodTextContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:autofillHints='@null'
        android:hint='@null'
        android:background="@null"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:ems="10"
        android:gravity="top"
        android:inputType="textMultiLine|text"
        android:textSize="21sp"
        app:layout_constraintBottom_toTopOf="@+id/shareToolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/genOptLayout" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/listOptionsToolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/gen_options_toolbar_height"
        android:background="#FFFFFF"
        android:elevation="8dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/genOptLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/gen_options_toolbar_height"
        android:elevation="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioGroup
            android:id="@+id/genOptRBG"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/buyRB"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="50dp"
                android:layout_weight="1"
                android:checked="true"
                android:paddingHorizontal="10dp"
                android:text="@string/food_rb_buy"
                android:textAlignment="viewStart"
                android:textColor="@color/disabled"
                android:textColorHighlight="@android:color/secondary_text_light_nodisable"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/prepareRB"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="50dp"
                android:layout_weight="1"
                android:checked="false"
                android:paddingHorizontal="10dp"
                android:text="@string/food_rb_prepare"
                android:textAlignment="viewStart"
                android:textColor="@color/disabled"
                android:textColorHighlight="@android:color/secondary_text_light_nodisable"
                android:textSize="20sp" />

        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/genDateOptLabel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingHorizontal="10dp"
                android:text="@string/gen_date_opt"
                android:textAlignment="gravity"
                android:textColor="@color/disabled"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/genDateOptField"
                android:autofillHints="@null"
                android:hint="@null"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ems="10"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:inputType="date"
                android:paddingHorizontal="10dp"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/genMealsOptLabel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingHorizontal="10dp"
                android:text="@string/gen_meals_opt"
                android:textColor="@color/disabled"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/genMealsOptField"
                android:autofillHints="@null"
                android:hint="@null"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:ems="10"
                android:inputType="number"
                android:maxLength="4"
                android:textAlignment="center" />
        </LinearLayout>
    </LinearLayout>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/shareToolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/share_toolbar_height"
        android:background="#FFFFFF"
        android:elevation="8dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/shareLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/share_toolbar_height"
        android:elevation="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/copyBT"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:foreground="@drawable/ic_content_copy_black_24dp"
            android:foregroundGravity="center"
            android:foregroundTint="@color/share_button" />

        <Button
            android:id="@+id/wpBT"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:foreground="@drawable/ic_whatsapp_logo"
            android:foregroundGravity="center"
            android:foregroundTint="@color/share_button" />

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/genBT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:clickable="true"
        android:tint="#FFFFFF"
        app:elevation="12dp"
        app:fabSize="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_sort_black_24dp" />

    <TextView
        android:id="@+id/backgroundLB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.15"
        android:text="@string/empty_list"
        android:textAlignment="viewEnd"
        android:textAllCaps="false"
        android:textSize="56sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/shareLayout"
        app:layout_constraintEnd_toEndOf="@+id/foodTextContainer"
        app:layout_constraintStart_toStartOf="@+id/foodTextContainer"
        app:layout_constraintTop_toTopOf="@+id/foodTextContainer" />

</androidx.constraintlayout.widget.ConstraintLayout>